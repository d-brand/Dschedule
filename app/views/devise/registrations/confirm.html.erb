<div>
  <h2>入力情報の確認</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <p><%= f.label :ご登録メールアドレス %><%= f.text_field :email, value: @user.email, readonly: true %></p>
    <p><%= f.label :お名前 %><%= f.text_field :name, value: @user.name, readonly: true %></p>
    <p><%= f.label :パスワード %><%= @password %></p>
      <%= f.hidden_field :password, value: @user.password %>

    <%= f.submit "修正する", name: :back %>
    <%= f.submit "登録する" %>

  <% end %>
</div>